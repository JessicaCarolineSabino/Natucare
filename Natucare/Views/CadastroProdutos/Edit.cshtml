@model Natucare.Entidades.CadastroProdutos

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/cadastrocliente.css" rel="stylesheet" />
<header class="header">
    <span class="font">Edição de Produtos</span>
</header>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Linha" class="control-label users"></label>
                <input asp-for="Linha" class="form-control field" />
                <span asp-validation-for="Linha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label users"></label>
                <input asp-for="Codigo" class="form-control field" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto" class="control-label users"></label>
                <input asp-for="Produto" class="form-control field" />
                <span asp-validation-for="Produto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoVenda" class="control-label users"></label>
                <input asp-for="PrecoVenda" class="form-control field" />
                <span asp-validation-for="PrecoVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeEstoque" class="control-label users"></label>
                <input asp-for="QuantidadeEstoque" class="form-control field" />
                <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="botao" />
            </div>
            <div>
                <button asp-action="Index" class="cancel">Cancelar</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
